<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small">
        <TextView
                android:id="@+id/contactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@+id/contactAmount"
                android:text="@string/text"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/blackish"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/commentId1"
                android:layout_marginStart="@dimen/margin_standard"/>
        <TextView
                android:id="@+id/commentId1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginLeft="@dimen/margin_standard"
                android:text="@string/comment"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/contactName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/contactAmount"
                android:layout_marginStart="@dimen/margin_standard"/>
        <TextView
                android:id="@+id/contactAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/text"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:textColor="@color/blackish"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toLeftOf="@+id/contactSettings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/contactName"
                tools:ignore="RtlCompat"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:id="@+id/contactSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/margin_small"
                app:layout_constraintLeft_toRightOf="@+id/contactAmount"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_more_vert_black_24dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
